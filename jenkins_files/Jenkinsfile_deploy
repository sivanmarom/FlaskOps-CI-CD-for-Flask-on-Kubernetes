pipeline {
      agent {
        label "final"
    }

    stages {
        stage('Hello') {
          steps {
            sh "echo \${image_name}"
          }
        }

  stage('git clone') {
    steps {
        sh 'rm -rf *'
        withCredentials([
            usernamePassword(credentialsId: 'github2', usernameVariable: 'GITHUB_USERNAME', passwordVariable: 'GITHUB_PASSWORD')
        ]) {
            sh "git config --global credential.helper '!f() { echo username=$GITHUB_USERNAME; echo password=$GITHUB_PASSWORD; }; f'"
            sh 'git clone https://github.com/sivanmarom/final_project.git'
        }
    }
}

        stage('Helm Chart and metrics server') {
            steps {
                dir('/home/ubuntu/workspace/deployment/final_project/k8s/mychart') {
                    script {
                          sh 'eksctl utils write-kubeconfig --cluster=flask-cluster'
                       sh 'kubectl get nodes'

                        sh 'kubectl apply -f namespace_flask.yaml'

                        // Update values.yaml with image tag parameters
                        sh "sed -i 's/tag: latest/tag: ${image_name}/' values.yaml"
                        sh "cat values.yaml"
                        // Build your Helm chart
                        sh 'helm package .'
                        sh "helm upgrade --install mychart mychart-0.1.0.tgz --namespace flask-space -f values.yaml"
                        sh 'git clone https://github.com/kubernetes-sigs/metrics-server.git'
                        sh 'kubectl apply -f metrics-server/deploy/kubernetes/'
                        sh 'kubectl apply -f hpa.yaml'
                    }
                }
            }
        }


        stage('App Deploy') {
            steps {
                dir('/home/ubuntu/workspace/deployment/final_project/k8s/mychart/templates') {
                    script {
                        sh 'kubectl apply -f flask-app-deployment.yaml'
                        sh 'kubectl get all --namespace flask-space'
                    }
                }
            }
        }        
    }
}

