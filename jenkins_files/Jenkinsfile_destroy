pipeline {
      agent {
        label "final"
    }
    
    stages {
        stage('destroy S3 Buckets') {
            steps {
                dir('/var/lib/jenkins/workspace/testing/final_project/terraform/s3'){
                    sh "aws s3 rm  s3://sivan-flask-bucket/flask_report.html"
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
                }
            }
        }
        stage('destroy dynamodb tables') {
            steps {
                dir('/var/lib/jenkins/workspace/testing/final_project/terraform/dynamodb'){
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
                }
            }
        }
        stage('Terminate and Delete Docker Containers') {
            steps {
                sh 'docker rm -f $(docker ps -aq)'
            }
        }
        
    }
}
