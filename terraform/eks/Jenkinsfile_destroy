pipeline {
    agent any
    
    stages {
           stage('git clone') {
            steps {
                sh 'rm -rf *'
                sh 'git clone https://github.com/sivanmarom/final_project.git'
            }
        }
        stage('create EKS cluster') {
            steps {
                dir('/var/lib/jenkins/workspace/deployment/final_project/k8s'){
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
                }
            }
        }
        
    
    }
}
